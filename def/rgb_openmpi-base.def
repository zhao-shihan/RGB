Bootstrap: localimage
From: rgb_base.sif

%post
    apt -y update
    apt -y full-upgrade
    apt -y install libopenmpi-dev
    apt -y autopurge
    apt clean

%labels
    MPI openmpi-deb13

%environment
    export OMPI_CC=fastgcc
    export OMPI_CXX=fastg++
    export OMPI_FC=fastgfortran
